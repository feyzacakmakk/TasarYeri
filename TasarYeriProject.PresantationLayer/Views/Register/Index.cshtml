@model AppUserRegisterDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>TASAR YERİ | KAYIT OL!</title>
    <meta charset="UTF-8">
    <meta name="description" content=" Divisima | eCommerce Template">
    <meta name="keywords" content="divisima, eCommerce, creative, html">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Favicon -->
    <link href="/tasaryericom/img/logo/logosvg.png" rel="shortcut icon" />

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css?family=Josefin+Sans:300,300i,400,400i,700,700i" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400&display=swap" rel="stylesheet">


    <!-- Stylesheets -->
    <link rel="stylesheet" href="~/tasaryericom/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/tasaryericom/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/tasaryericom/css/flaticon.css" />
    <link rel="stylesheet" href="~/tasaryericom/css/slicknav.min.css" />
    <link rel="stylesheet" href="~/tasaryericom/css/jquery-ui.min.css" />
    <link rel="stylesheet" href="~/tasaryericom/css/owl.carousel.min.css" />
    <link rel="stylesheet" href="~/tasaryericom/css/animate.css" />
    <link rel="stylesheet" href="~/tasaryericom/css/style.css" />
    <link rel="stylesheet" href="/tasaryericom/css/signupcss/style.css">


    <!--[if lt IE 9]>
          <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- Font Icon -->
    <link rel="stylesheet" href="fonts/material-icon/css/material-design-iconic-font.min.css">




</head>

<body>

    <div class="main">

        <!-- Sign up form -->
        <section class="signup">
            <div class="container">
                <div class="signup-content">
                    <div class="signup-form">
                        <h2 class="form-title">Kayıt Ol</h2>
                        <form method="POST" class="register-form" id="register-form">
                            <div class="form-group">
                                <label for="name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                <input type="text" asp-for="Name" id="name" placeholder="Adınız" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                <input type="text" asp-for="Surname" id="Surname" placeholder="Soyadınız" />
                            </div>
                            <div class="form-group">
                                <label for="name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                <input type="text" asp-for="Username" id="Username" placeholder="Kullanıcı adınız" />
                            </div>
                            <div class="form-group">
                                <label for="email"><i class="zmdi zmdi-email"></i></label>
                                <input type="email" asp-for="Email" id="email" placeholder="Email Adresiniz" />
                            </div>
                            <div class="form-group">
                                <label for="pass"><i class="zmdi zmdi-lock"></i></label>
                                <input type="password" asp-for="Password" id="pass" placeholder="Şifreniz" />
                            </div>
                            <div class="form-group">
                                <label for="re-pass"><i class="zmdi zmdi-lock-outline"></i></label>
                                <input type="password" asp-for="ConfirmPassword" id="re_pass" placeholder="Şifreyi tekrar girin" />
                            </div>
                            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                            <div class="form-group">
                                <input type="checkbox" name="agree-term" id="agree-term" class="agree-term" />
                                <label for="agree-term" class="label-agree-term">
                                    <span class="spn"><span></span></span>
                                    <a href="#" class="term-service">Tüm şartları  </a> kabul ediyorum
                                </label>
                            </div>
                            <div class="form-group form-button">
                                <input type="submit" class="form-submit" value="Kayıt Ol" />
                            </div>
                        </form>
                    </div>
                    <div class="signup-image">
                        <figure><img src="/tasaryericom/img/sign-up/signupfoto.png" alt="sing up image"></figure>
                        <a href="/Login/Index/" class="signup-image-link">Zaten bir hesabım var</a>
                        <a href="/Register/SellerRegister/" class="signup-image-link">Satıcı olarak kayıt olmak istiyorum.</a>
                    </div>
                </div>
            </div>
        </section>



    </div>

    <!-- JS -->

    <script src="/tasaryericom/js/jquery-3.2.1.min.js"></script>
    <script src="/tasaryericom/js/bootstrap.min.js"></script>
    <script src="/tasaryericom/js/jquery.slicknav.min.js"></script>
    <script src="/tasaryericom/js/owl.carousel.min.js"></script>
    <script src="/tasaryericom/js/jquery.nicescroll.min.js"></script>
    <script src="/tasaryericom/js/jquery.zoom.min.js"></script>
    <script src="/tasaryericom/js/jquery-ui.min.js"></script>
    <script src="/tasaryericom/js/main.js"></script>
</body><!-- This templates was made by Colorlib (https://colorlib.com) -->
</html>
