@model Message
@{
    ViewData["Title"] = "MemberMessageDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="zxx">

<body>

	<!-- Page info -->
	<div class="page-top-info">
		<div class="container">
			<h4>Hesabım</h4>
			<div class="site-pagination">
				<a href="">Ana Sayfa</a> /
				<a href="">Hesabım</a>
			</div>
		</div>
	</div>
	<!-- Page info end -->
	<!--iframe section -->
	<section class="spad">
		<div class="container">
			<div class="row">
				<div class="col-lg-3 order-2 order-lg-1" style="margin-right: 90px;">
					<div class="filter-widget">
						<partial name="/Views/MyAccount/Partials/_AccountCategoriesPartial.cshtml" />
					</div>

				</div>

				<!-- iframe kısmı -->
				<div class="col-lg-8 order-1 order-lg-2 mb-5 mb-lg-0 memberpanel">
					<div class="row ">
						<div class="col-lg-12">
							<a href="/Message/MemberInbox/" class="float-right mt-2"><i class="fa fa-mail-reply"></i> Geri Dön</a>
							<br/>
							<img src="@Model.SenderUser.ImageUrl" alt="Kullanıcı Resmi" style="width: 50px; height: 50px;" class="rounded-circle mb-2" />
							
								<strong>@Model.SenderUser.Name @Model.SenderUser.Surname</strong>
							
							<div class="cerceve">
								<strong>Konu:</strong> @Model.Subject
							</div>
							<div class="col-lg-12 cerceve mt-3">
								<!-- Mesaj içeriğini buraya ekleyin -->
								<div>
									<strong>Mesaj:</strong> @Model.MessageDetails

									<div class="mt-3 text-right">
										<strong>Tarih:</strong> @Model.MessageDate.ToShortDateString()
									</div>
								</div>
							</div>
							
							<a href="/Message/MemberReplyMessage/@Model.SenderId/" class="btn btn-info float-right mt-2"><i class="fa fa-share"></i> Cevapla</a>
							
						</div>
						
					</div>
				</div>

			</div>
		</div>
	</section>
	<!-- Category section end -->
	<!-- Banner section -->
	<partial name="/Views/Shared/Partials/_BannerPartial.cshtml" />
	<!-- Banner section end  -->
	<!-- letest product section -->
	@await Component.InvokeAsync("RecentlyAddedProducts");
	<!-- letest product section end -->
	<!--====== Javascripts & Jquery ======-->
	<script src="/tasaryericom/js/jquery-3.2.1.min.js"></script>
	<script src="/tasaryericom/js/bootstrap.min.js"></script>
	<script src="/tasaryericom/js/jquery.slicknav.min.js"></script>
	<script src="/tasaryericom/js/owl.carousel.min.js"></script>
	<script src="/tasaryericom/js/jquery.nicescroll.min.js"></script>
	<script src="/tasaryericom/js/jquery.zoom.min.js"></script>
	<script src="/tasaryericom/js/jquery-ui.min.js"></script>
	<script src="/tasaryericom/js/main.js"></script>

</body>
</html>