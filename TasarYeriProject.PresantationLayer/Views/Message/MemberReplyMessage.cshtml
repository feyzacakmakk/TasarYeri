@model Message
@{
	ViewData["Title"] = "MemberSendMessage";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="zxx">

<body>

	<!-- Page info -->
	<div class="page-top-info">
		<div class="container">
			<h4>Hesabım</h4>
			<div class="site-pagination">
				<a href="">Ana Sayfa</a> /
				<a href="">Hesabım</a>
			</div>
		</div>
	</div>
	<!-- Page info end -->
	<!--iframe section -->
	<section class="spad">
		<div class="container">
			<div class="row">
				<div class="col-lg-3 order-2 order-lg-1" style="margin-right: 90px;">
					<div class="filter-widget">
						<partial name="/Views/MyAccount/Partials/_AccountCategoriesPartial.cshtml" />
					</div>

				</div>

				<!-- iframe kısmı -->
				<div class="col-lg-8 order-1 order-lg-2 mb-5 mb-lg-0 memberpanel">
					<h2 class="mb-5">Mesaj Gönder</h2>
					<form class="form-group" asp-action="MemberReplyMessage" asp-controller="Message" method="post">
						<div class="form-group row">
							<label class="col-sm-2 col-form-label">Kimden:</label>
							<div class="col-sm-10">
								<input type="text" class="form-control" disabled value="@ViewBag.userMail" asp-for="SenderId">
							</div>
						</div>
						<div class="form-group row">
							<label class="col-sm-2 col-form-label">Kime:</label>
							<div class="col-sm-10">
								<input type="text" class="form-control" disabled value="@ViewBag.senderName" asp-for="ReceiverId">
							</div>
						</div>
						<div class="form-group row">
							<label class="col-sm-2 col-form-label">Konu:</label>
							<div class="col-sm-10">
								<input type="text" class="form-control" asp-for="Subject">
							</div>
						</div>
						<div class="form-group row">
							<label class="col-sm-2 col-form-label">Mesaj:</label>
							<div class="col-sm-10">
								<textarea type="text" class="form-control" rows="5" asp-for="MessageDetails"></textarea>
							</div>
						</div>
						<br />
						<div class="form-group row" style="margin-left:670px;">
							<button class="btn btn-primary btn-sm"><i class="fa fa-pencil-square-o" aria-hidden="true"></i> Gönder </button>


						</div>

					</form>

				</div>

			</div>
		</div>
	</section>
	<!-- Category section end -->
	<!-- Banner section -->
	<partial name="/Views/Shared/Partials/_BannerPartial.cshtml" />
	<!-- Banner section end  -->
	<!-- letest product section -->
	@await Component.InvokeAsync("RecentlyAddedProducts");
	<!-- letest product section end -->
	<!--====== Javascripts & Jquery ======-->
	<script src="/tasaryericom/js/jquery-3.2.1.min.js"></script>
	<script src="/tasaryericom/js/bootstrap.min.js"></script>
	<script src="/tasaryericom/js/jquery.slicknav.min.js"></script>
	<script src="/tasaryericom/js/owl.carousel.min.js"></script>
	<script src="/tasaryericom/js/jquery.nicescroll.min.js"></script>
	<script src="/tasaryericom/js/jquery.zoom.min.js"></script>
	<script src="/tasaryericom/js/jquery-ui.min.js"></script>
	<script src="/tasaryericom/js/main.js"></script>

</body>
</html>
