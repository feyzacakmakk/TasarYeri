@model List<Product>
@{
	ViewData["Title"] = "Favoriler";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="zxx">

<body>

	<!-- Page info -->
	<div class="page-top-info">
		<div class="container">
			<h4>Hesabım</h4>
			<div class="site-pagination">
				<a href="">Ana Sayfa</a> /
				<a href="">Hesabım</a>
			</div>
		</div>
	</div>
	<!-- Page info end -->
	<!--iframe section -->
	<section class="spad">
		<div class="container">
			<div class="row">
				<div class="col-lg-3 order-2 order-lg-1" style="margin-right: 90px;">
					<div class="filter-widget">
						<partial name="/Views/MyAccount/Partials/_AccountCategoriesPartial.cshtml" />
					</div>

				</div>

				<!-- iframe kısmı -->
				<div class="col-lg-8  order-1 order-lg-2 mb-5 mb-lg-0 memberpanel">
					<div class="mb-4" style="text-align: center;">
						<div>
						<label for="exampleFormControlInput1" class="form-label" style="font-size: 20px;">  FAVORİLER @* <i class="fa fa-star"></i> *@  </label>
						<img src="/photos/star.png" alt="" class="mb-3"/>
						</div>
					</div>
					<!-- Category section -->
					<section class="favorites">
						<div class="container">
							<div class="row">

								<div class="col-lg-12  order-1 order-lg-2 mb-5 mb-lg-0">
									<div class="row">
										@foreach (var item in Model)
										{
											<div class="col-lg-4 col-sm-6">
												<div class="product-item">
													<div class="pi-pic">
														<a href="/Product/ProductDetail/@item.ProductId"><img src="@item.ImageUrl" alt="" class="img-thumbnail"></a>
														<div class="pi-links">
															<a href="#" class="add-card"><i class="flaticon-bag"></i><span>Sepete Ekle</span></a>
															<a href="#" class="wishlist-btn"><i class="fa fa-heart"></i></a>
														</div>
													</div>
													<div class="pi-text">
														<h6>@item.Price <i class="fa fa-try" aria-hidden="true"></i></h6>
														<p>@item.ProductName</p>
													</div>
												</div>
											</div>

										}



									</div>
								</div>


							</div>
						</div>
					</section>
					<!-- Category section end -->
				</div>
			</div>
		</div>
	</section>
	<!-- Category section end -->
	<!-- Banner section -->
	<partial name="/Views/Shared/Partials/_BannerPartial.cshtml" />
	<!-- Banner section end  -->
	<!-- letest product section -->
	@await Component.InvokeAsync("RecentlyAddedProducts");
	<!-- letest product section end -->
	<!--====== Javascripts & Jquery ======-->
	<script src="/tasaryericom/js/jquery-3.2.1.min.js"></script>
	<script src="/tasaryericom/js/bootstrap.min.js"></script>
	<script src="/tasaryericom/js/jquery.slicknav.min.js"></script>
	<script src="/tasaryericom/js/owl.carousel.min.js"></script>
	<script src="/tasaryericom/js/jquery.nicescroll.min.js"></script>
	<script src="/tasaryericom/js/jquery.zoom.min.js"></script>
	<script src="/tasaryericom/js/jquery-ui.min.js"></script>
	<script src="/tasaryericom/js/main.js"></script>

</body>
</html>
